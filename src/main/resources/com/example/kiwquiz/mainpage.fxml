<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.kiwquiz.controllers.MainPageController">
    <children>
        <VBox prefWidth="980.0" prefHeight="640.0">
            <BorderPane>
                <top>
                    <HBox alignment="CENTER" spacing="10.0">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        <Label text="Nama: " />
                        <Label fx:id="usernameLabel" text="UserName" />
                        <Button text="Edit" onAction="#handleEditProfile"/>
                        <Pane HBox.hgrow="ALWAYS"/>
                        <Label text="Skor Tertinggi:" />
                        <Label fx:id="scoreLabel" text="0" />
                    </HBox>
                </top>
                <center>
                    <Label text="KiwQuiz" style="-fx-font-size: 48px; -fx-font-weight: bold;" />
                </center>
                <bottom>
                    <HBox spacing="20.0" alignment="CENTER">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        <Button text="Leaderboard" onAction="#handleLeaderboard" prefWidth="150"/>
                        <Button text="Mulai Quiz" onAction="#handleStartQuiz" prefWidth="150"/>
                    </HBox>
                </bottom>
            </BorderPane>
        </VBox>
    </children>
</AnchorPane>