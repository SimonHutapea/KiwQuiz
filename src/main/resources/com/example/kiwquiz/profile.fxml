<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.kiwquiz.controllers.ProfileController">
    <children>
        <VBox alignment="CENTER" spacing="15.0" layoutX="100.0" layoutY="50.0" prefWidth="600.0" prefHeight="400.0">
            <Label text="Profil Pengguna" style="-fx-font-size: 28px; -fx-font-weight: bold;" />

            <Label text="Nama Saat Ini:" />
            <Label fx:id="currentNameLabel" text="UserName" />

            <TextField fx:id="newNameField" promptText="Nama Baru" prefWidth="250"/>
            <Button text="Ganti Nama" onAction="#handleChangeUsername" prefWidth="120"/>

            <PasswordField fx:id="newPasswordField" promptText="Password Baru" prefWidth="250"/>
            <Button text="Ganti Password" onAction="#handleChangePassword" prefWidth="120"/>

            <Button text="Logout" onAction="#handleLogout" prefWidth="100"/>

            <Label fx:id="statusLabel" textFill="green"/>
        </VBox>
    </children>
</AnchorPane>
