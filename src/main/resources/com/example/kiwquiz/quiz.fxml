<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.kiwquiz.controllers.QuizController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="15.0" layoutX="50.0" layoutY="30.0" prefWidth="700.0" prefHeight="500.0">

            <HBox spacing="20.0" alignment="CENTER">
                <Label text="Babak:" />
                <Label fx:id="stageLabel" text="1"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Label text="Sisa Waktu:" />
                <Label fx:id="timerLabel" text="60" style="-fx-font-size: 18px; -fx-text-fill: red;" />
            </HBox>

            <Label fx:id="questionLabel" wrapText="true" style="-fx-font-size: 20px;" prefWidth="600.0"/>

            <VBox spacing="10.0" alignment="CENTER_LEFT" prefWidth="600.0">
                <RadioButton fx:id="optionA" toggleGroup="$optionsGroup"/>
                <RadioButton fx:id="optionB" toggleGroup="$optionsGroup"/>
                <RadioButton fx:id="optionC" toggleGroup="$optionsGroup"/>
                <RadioButton fx:id="optionD" toggleGroup="$optionsGroup"/>
                <RadioButton fx:id="optionE" toggleGroup="$optionsGroup"/>
            </VBox>

            <Button text="Submit Jawaban" onAction="#handleNext" prefWidth="150"/>
        </VBox>
    </children>
</AnchorPane>
